function solve(group_of_people,  type_of_the_group, day_of_the_week){

    var total_price = 0
    var one_for_bussiness = 0

    if (type_of_the_group == 'Students' && day_of_the_week == 'Friday') {
        total_price = 8.45 * group_of_people;
    } else if (type_of_the_group == 'Business' && day_of_the_week == 'Friday') {
        one_for_bussiness = 10.90
        total_price = 10.90 * group_of_people;
    } else if (type_of_the_group == 'Regular' && day_of_the_week == 'Friday') {
        total_price = 15 * group_of_people;
    } else if (type_of_the_group == 'Students' && day_of_the_week == 'Saturday') {
        total_price = 9.80 * group_of_people;
    } else if (type_of_the_group == 'Business' && day_of_the_week == 'Saturday') {
        one_for_bussiness = 15.60
        total_price = 15.60 * group_of_people;
    } else if (type_of_the_group == 'Regular' && day_of_the_week == 'Saturday') {
        total_price = 20 * group_of_people;
    } else if (type_of_the_group == 'Students' && day_of_the_week == 'Sunday') {
        total_price = 10.46 * group_of_people;
    } else if (type_of_the_group == 'Business' && day_of_the_week == 'Sunday') {
        one_for_bussiness = 16
        total_price = 16 * group_of_people;
    } else if (type_of_the_group == 'Regular' && day_of_the_week == 'Sunday') {
        total_price = 22.50 * group_of_people;
    }
    

    if (group_of_people >= 30 && type_of_the_group == 'Students') {
        total_price = total_price - (total_price * 0.15)
        console.log(`Total price: ${total_price.toFixed(2)}`)
    } else if (group_of_people >= 100 && type_of_the_group == 'Business') {
        total_price = total_price - (one_for_bussiness * 10)
        console.log(`Total price: ${total_price.toFixed(2)}`)
    } else if (group_of_people >= 10 && group_of_people <= 20 && type_of_the_group == 'Regular') {
        total_price = total_price - (total_price * 0.05)
        console.log(`Total price: ${total_price.toFixed(2)}`)
    } else {
        console.log(`Total price: ${total_price.toFixed(2)}`)
    }
    
}
